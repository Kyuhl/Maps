<?xml version="1.0"?>
    <map proto="1.3.3">
    <name>Isle</name>
    <version>1.0.0</version>
    <objective>Leak the enemies core.</objective>

    <authors>
        <author>Theta_</author>
    </authors>

    <contributors>
        <contributor contribution="XML">Kyuhl</contributor>
    </contributors>

    <teams>
        <team color="light purple" max="10">Magenta Team</team>
        <team color="aqua" max="10">Light Blue Team</team>
    </teams>

    <spawns>
        <spawn team="magenta" yaw="90">
            <cuboid min="222.5,39,785.5" max="223.5,39,784.5"/>
        </spawn>
        <spawn team="light blue" yaw="270">
            <cuboid min="207.5,39,602.5" max="206.5,39,603.5"/>
        </spawn>
        <default yaw="-90">
            <cylinder base="282.5,87,693.5" radius="2" height="0"/>
        </default>
    </spawns>

    <cores material="obsidian" leak="5">
        <core team="magenta"><cuboid min="220.5,50,741.5" max="214.5,57,735.5"/></core>
        <core team="light blue"><cuboid min="215.5,50,652.5" max="207.5,57,646.5"/></core>
    </cores>

    <regions>
        <apply block-break="deny-mob_spawner" message="You may not break the dispensers!">
            <rectangle min="-oo,-oo" max="oo,oo"/>
        </apply>
    </regions>

    <kits>
        <kit name="spawn" force="true">
            <item slot="0">iron sword</item>
            <item slot="1">bow</item>
            <item slot="2">iron pickaxe</item>
            <item slot="3">iron axe</item>
            <item slot="4" amount="64">pumpkin pie</item>
            <item slot="5" amount="2">golden apple</item>
            <item slot="7" amount="64">log</item>
            <item slot="8" amount="64">stained glass</item>
            <item slot="34" amount="64">arrow</item>
            <item slot="35" amount="64">arrow</item>
        </kit>
        <kit name="magenta" parents="spawn">
            <helmet color="B24CD8">leather helmet</helmet>
            <chestplate color="B24CD8">iron chestplate</chestplate>
            <leggings color="B24CD8">leather chestplate</leggings>
            <boots color="B24CD8">leather boots</boots>
        </kit>
        <kit name="light blue" parents="spawn">
            <helmet color="6699D8">leather helmet</helmet>
            <chestplate color="6699D8">iron chestplate</chestplate>
            <leggings color="6699D8">leather chestplate</leggings>
            <boots color="6699D8">leather boots</boots>
        </kit>
    </kits>

</map>